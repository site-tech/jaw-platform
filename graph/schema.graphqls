# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time

input DBConnection {
	host: String!
	user: String!
	password: String!
	dbname: String!
	port: Int!
	sslmode: String!
}

type column {
	name: String!
	type: String!
}

type FlatTable {
	name: String!
	columns: [column!]!
}

input reportSelection {
	_id: String!
	field: String!
	operator: String!
	value: String!
}

input ReportClause {
	selections: [reportSelection!]!
}

extend type Query {
	jaw: User!
	dbConnection(cred: DBConnection): FlatTable!
	buildReport(clause: ReportClause): Int!
}
